<h1><%= @article.title %></h1>
<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>
<% if @article.image.exists? %>
  <p><%= image_tag @article.image.url(:medium) %></p>
<% end %>
<p class="article_body"><%= @article.body %></p>
<% if logged_in? %>
  <%= link_to "edit", edit_article_path(@article) %>
  <%= link_to "delete", article_path(@article),
              method: :delete,
              data: {confirm: "Realy delete this article?"} %>
<% end %>
<h3>Comments (<%= @article.comments.size %>)</h3>
<hr>
<%= render partial: 'articles/comment', collection: @article.comments %>
<%= render partial: 'comments/form' %>

<ul id="content">
  <% if logged_in? %>
    <li>
      <%= link_to "Authors List", authors_path %>
      (User Accounts)
    </li>
  <% end %>
  <li>
    <%= link_to "Articles List", articles_path %>
  </li>
  <li>
    <%= link_to 'Tags List', tags_path %>
  </li>
</ul>
