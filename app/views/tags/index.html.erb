<h1>All Tags</h1>

<p>Select a tag to view all associated articles:</p>

<ul id="tags">
  <% @tags.each do |tag| %>
    <% if tag.articles.exists? %>
      <li class="tags">
        <%= link_to tag.name, tag_path(tag) %>
      </li>
    <% else %>
      <% tag.destroy %>
    <% end %>
  <% end %>
</ul>
