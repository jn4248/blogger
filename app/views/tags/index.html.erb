<h1>All Tags</h1>

<p>Select a tag to view all associated articles.</p><br />

<ul id="tags">
  <% @tags.each do |tag| %>
    <% if tag.articles.exists? %>
      <li class='tags'>
        <%= link_to tag.name, tag_path(tag) %>
      </li>
    <% else %>
      <% tag.destroy %>
    <% end %>
  <% end %>
</ul> <br />

<%= link_to "Back to Articles", articles_path %>
