<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th class="first_row">Username</th>
      <th class="first_row">Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.username %></td>
        <td><%= author.email %></td>
        <td><%= author.password %></td>
        <td><%= link_to "Show", author %></td>
        <td><%= link_to "Edit", edit_author_path(author) %></td>
        <td><%= link_to "Delete", author, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if logged_in? %>
  <p id="content">
    <%= link_to "Create New Author", new_author_path %>
  </p>
<% end %>

<ul id="content">
  <li>
    <%= link_to "Articles List", articles_path %>
  </li>
  <li>
    <%= link_to "Tags List", tags_path %>
  </li>
</ul>
