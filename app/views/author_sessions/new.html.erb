<h1>Login</h1>

<%= form_tag author_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>

<ul id="content">
  <% if logged_in? %>
    <li>
      <%= link_to "Authors List", authors_path %>
      (User Accounts)
    </li>
  <% end %>
  <li>
    <%= link_to "Articles List", articles_path %>
  </li>
  <li>
    <%= link_to 'Tags List', tags_path %>
  </li>
</ul>
